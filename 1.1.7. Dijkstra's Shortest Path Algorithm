#include <limits.h> 
	for(i=1;i<=n;i++){
		if(i!=startnode){
			if(distance[i]==INFINITY){
				printf("%4d",i);
				printf("\t");
				printf("%8s","INF");
				printf("\t");
				printf("NO PATH");
				printf("\n");
			} else{
				printf("%4d",i);
				printf("\t");
				printf("%8d",distance[i]);
				printf("\t");
				printf("%d",i);
				j=i;
				do{
					j=pred[j];
					printf("<-");
					printf("%d",j);
				}while(j!=startnode);
				printf("\n");
			}
		}
	}
}
int main() { 
	int s, d, w, i, j;
	printf("Enter the number of vertices : ");
	scanf("%d", &V);
	printf("Enter the number of edges : ");
	scanf("%d", &E);
	for(i = 1 ; i <= V; i++) {
		for(j = 1; j <= V; j++) {
			graph[i][i] = 0;
		}
	}
	for(i = 1; i <= E; i++) {
		printf("Enter source : ");
		scanf("%d", &s);
		printf("Enter destination : ");
		scanf("%d", &d);
		printf("Enter weight : ");
		scanf("%d", &w);
		if(s > V || d > V || s <= 0 || d <= 0) {
			printf("Invalid index. Try again.\n");
			i--;
			continue;
		} else {
			graph[s][d] = w;
		}
	}
	printf("Enter the source :");
	scanf("%d", &s);
	dijkstra(graph, V, s); 
	return 0; 
} 
